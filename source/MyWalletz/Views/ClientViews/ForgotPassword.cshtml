@using MyWalletz.Helpers
<script type="text/ng-template" id="forgot-password.html">
  <div id="forgot-password-page">
    <h2 class="page-header">Forgot Password</h2>
    <form name="form" ng-submit="submit()">
      @Html.ClientView("ModelErrors")
      <div
        class="control-group"
        ng-class="{ 'error': form.email.$invalid && form.email.$dirty }">
        <label class="control-label" for="forgot-password-email">Email</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <input
              id="forgot-password-email"
              name="email"
              type="email"
              ng-model="password.email"
              ng-required="true"
              autofocus />
          </div>
          <div
            class="help-block"
            ng-show="form.email.$invalid && form.email.$dirty">
            <span ng-show="form.email.$error.required">Email is required.</span>
            <span ng-show="form.email.$error.email">
              Email must be in valid format.
            </span>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <button
          type="submit"
          ng-disabled="form.$invalid"
          class="btn btn-primary">
          Submit
        </button>
        or <a href="@Url.ClientUrl("sign-in")">sign in</a> 
        if you can recall your credential.
      </div>
    </form>
  </div>
</script>