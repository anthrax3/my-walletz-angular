@using MyWalletz.Helpers
<script type="text/ng-template" id="session-create.html">
  <h2 class="page-header">Sign In</h2>
  <form name="form" ng-submit="submit()">
    @Html.ClientView("ModelErrors")
    <div
      class="control-group"
      ng-class="{ 'error': form.email.$invalid && form.email.$dirty }">
      <label class="control-label" for="sign-in-email">Email</label>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <input
            id="sign-in-email"
            name="email"
            type="email"
            ng-model="session.email"
            ng-required="true"
            autofocus />
        </div>
        <div
          class="help-block"
          ng-show="form.email.$invalid && form.email.$dirty">
          <span ng-show="form.email.$error.required">Email is required.</span>
          <span ng-show="form.email.$error.email">
            Email must be in valid format.
          </span>
        </div>
      </div>
    </div>
    <div
      class="control-group"
      ng-class="{ 'error': form.password.$invalid && form.password.$dirty }">
      <label class="control-label" for="sign-in-password">
        Password
        (<a href="@Url.ClientUrl("passwords", "reset")" tabindex="-1">Forgot?</a>)
      </label>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-key"></i></span>
          <input
            id="sign-in-password"
            name="password"
            type="password"
            ng-model="session.password"
            ng-required="true" />
        </div>
        <span
          class="help-block"
          ng-show="form.password.$invalid && form.password.$dirty">
          Password is required.
        </span>
      </div>
    </div>
    <div class="control-group">
      <label class="checkbox">
        <input
          id="sign-in-remember-me"
          name="rememberMe"
          type="checkbox"
          value="true"
          ng-model="session.rememberMe" />
        <span>Keep me remembered</span>
      </label>
    </div>
    <div class="form-actions">
      <button
        type="submit"
        ng-disabled="form.$invalid" class="btn btn-primary">
        Submit
      </button>
      or <a href="@Url.ClientUrl("users", "new")">sign up</a> 
      if you do not have any account.
    </div>
  </form>
</script>